# Import cars data
import pandas as pd
cars = pd.read_csv('cars.csv', index_col = 0)

# Adapt for loop
for lab, row in cars.iterrows() :
    print(lab+": "+str(row['cars_per_cap']))
    
-------------------------
AÑADIR UNA COLUMNA CON BASE EN OTRA


# Import cars data
import pandas as pd
cars = pd.read_csv('cars.csv', index_col = 0)

# Code for loop that adds COUNTRY column
for lab, row in cars.iterrows() :
    cars.loc[lab, "COUNTRY"] = str.upper(row["country"])
    
    #o bien 
    #cars.loc[lab, "COUNTRY"] = row["country"].upper()


# Print cars
print(cars)


--------------------------------
AÑADIR UNA COLUMNA MAS EFICIENTE

# Import cars data
import pandas as pd
cars = pd.read_csv('cars.csv', index_col = 0)

# Use .apply(str.upper)
cars["COUNTRY"] = cars["country"].apply(str.upper)
cars["double_cars_per_cap"] = cars["cars_per_cap"]*2

print(cars)

